<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="2dp"
    android:id="@+id/llId_costitem_item_ll"
    >
     <!-- 
        android:background="@drawable/itembg_green" 
         -->
    <LinearLayout
        android:padding="0.1dip" 
        android:layout_width="match_parent"
        android:background="@drawable/itembg_green" 
    	android:layout_height="30dp"
        android:orientation="horizontal" >
		
	    <TextView
	        android:id="@+id/tvId_userpaycheck_item_num"
	        android:layout_height="20dp"
	        android:layout_width="wrap_content"
	        android:textSize="16sp"
	        android:layout_weight="1"
	        android:textColor="@color/black"
	        android:gravity="center|left"
	        android:text="序列号"
	        />
	    <TextView
	        android:id="@+id/tvId_userpaycheck_item_name"
	        android:layout_height="20dp"
	        android:layout_width="wrap_content"
	        android:textSize="16sp"
	        android:layout_weight="7"
	        android:textColor="@color/black"
	        android:gravity="center|left"
	        android:text="货物名字"
	        />
	     <TextView
	        android:id="@+id/tvId_userpaycheck_item_money"
	        android:layout_height="20dp"
	        android:layout_width="wrap_content"
	        android:textSize="16sp"
	        android:layout_weight="2"
	        android:textColor="@color/black"
	        android:gravity="center|left"
	        android:text="货物价钱"
	        />
 
    </LinearLayout>

   

</LinearLayout>