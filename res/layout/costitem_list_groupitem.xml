<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="2dp"
    android:id="@+id/llId_costitem_groupitem_ll"
    >
    <LinearLayout
        android:id = "@+id/llId_costitem_groupitem_ll1"
        android:background="@color/white" 
        android:padding="0.1dip" 
        android:layout_width="match_parent"
    	android:layout_height="40dp"
        android:orientation="horizontal" >
		
	    <TextView
	        android:id="@+id/tvId_costitem_groupitem_name"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:textSize="18sp"
	        android:textColor="@color/black"
	        android:gravity="center|left"
	        android:layout_marginLeft="50dp"
	        android:text="名字"
	        />
	    
	 	<TextView
	        android:id="@+id/tvId_costitem_groupitem_vipprice"
	        android:layout_height="match_parent"
	        android:layout_width="wrap_content"
	        android:textSize="18sp"
	        android:paddingLeft="10px"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_weight="2"
	        android:textColor="@color/black"
	        android:gravity="center|right"
	        android:text="钱"
	        />
	 	<!-- android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false" -->
	 	<CheckBox
            android:id="@+id/cbId_costitem_groupitem_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@drawable/selector_checkbox"
            android:textColor="#406080"
            android:checked="false"
        	android:focusable="false" 
            />
<!--  -->
 
    </LinearLayout>

   

</LinearLayout>