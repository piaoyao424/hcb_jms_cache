<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="2dp"
    android:id="@+id/llId_costitem_childitem_ll"
    >
    <LinearLayout
        android:id = "@+id/llId_costitem_childitem_ll1"
        android:background="@drawable/button_b_normal" 
        android:layout_width="match_parent"
    	android:layout_height="30dp"
        android:orientation="horizontal" >
		
	    <TextView
	        android:id="@+id/tvId_costitem_childitem_name"
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="4"
	        android:textSize="20sp"
	        android:textColor="@color/black"
	        android:gravity="center|left"
	        android:layout_marginLeft="10dp"
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:scrollHorizontally="true" 
	        android:text="名字"
	        
	        />
	    
	 	<TextView
	        android:id="@+id/tvId_costitem_childitem_vipprice"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:textSize="20sp"
	        android:layout_weight="1"
	        android:paddingLeft="10dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:textColor="@color/black"
	        android:gravity="center|right"
	        android:text="钱"
	        />
	 	<!-- android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false" -->
	 	<CheckBox
            android:id="@+id/cbId_costitem_childitem_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_checkbox"
            android:layout_weight="1"
            android:textColor="#406080"
            android:checked="false"
        	android:focusable="false" 
            />
<!--  -->
 
    </LinearLayout>

   

</LinearLayout>